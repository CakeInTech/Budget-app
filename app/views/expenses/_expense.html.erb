<div class="card my-5">
  <div class="card-body d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <div class="d-flex align-items-center gap-2">
        <%= image_tag @group.icon, class: "category-images" %>
        <div>
          <h5 class="card-title"><%= expense.name %></h5>
          <span class="card-text font-bold">$<%= expense.amount %></span>
        </div>
      </div>
    </div>
    <% if action_name != "show" %>
      <div class="d-flex gap-2">
        <%= link_to edit_group_expense_path(@group,expense), class: "btn btn-sm btn-outline-secondary" do %>
          <i class="bi bi-pencil-square"></i>
        <% end %>
        <%= button_to group_expense_path(@group, expense), method: :delete, class: "btn btn-sm btn-outline-danger" do %>
          <i class="bi bi-trash"></i>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
