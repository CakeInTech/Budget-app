<div class="container d-flex justify-content-center align-items-center h-100">
  <div class="col-md-6 col-lg-5">
    <div class="card p-4 shadow-sm">
      <h2 class="mb-3 text-center text-main font-semibold">Log in</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.email_field :email, id: "email", class: "form-control", placeholder: "Email", autofocus: true, autocomplete: "email" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, id: "password", class: "form-control", placeholder: "Password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember-me" %>
            <%= f.label :remember_me, class: "form-check-label", for: "remember-me" %>
          </div>
        <% end %>
        <%= f.button "Log in", type: "submit", class: "btn btn-primary w-100 mt-3" %>
      <% end %>
      <div class="mt-3 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
