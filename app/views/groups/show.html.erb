<div class="container ">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <% if notice.present? %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>

      <%= render @group %>

      <%= link_to 'Edit this group', edit_group_path(@group), class: "btn btn-primary mt-2 me-2" %>
      <%= button_to 'Destroy this group', group_path(@group), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger mt-2 me-2" %>
      <%= link_to 'Back to groups', groups_path, class: "btn btn-secondary mt-2" %>
    </div>
  </div>
</div>
